<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/app_title"
        android:layout_width="300dp"
        android:layout_height="111dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:lineSpacingExtra="24sp"
        android:text="Adaptive Diagnosis Prototype"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/diagnosisButton"
        app:layout_constraintEnd_toEndOf="@+id/diagnosisButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/diagnosisButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/diagnosisButton"
        android:layout_width="300dp"
        android:layout_height="49dp"
        android:background="@drawable/main_screen_buttons"
        android:text="New patient"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/queryButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_title" />

    <Button
        android:id="@+id/queryButton"
        android:layout_width="300dp"
        android:layout_height="49dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/main_screen_buttons"
        android:text="Revisiting patient"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/feedback"
        app:layout_constraintEnd_toEndOf="@id/diagnosisButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/diagnosisButton"
        app:layout_constraintTop_toBottomOf="@+id/diagnosisButton" />

    <Button
        android:id="@+id/feedback"
        android:layout_width="300dp"
        android:layout_height="49dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/main_screen_buttons"
        android:text="Feedback"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/diagnosisButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/diagnosisButton"
        app:layout_constraintTop_toBottomOf="@+id/queryButton" />


</androidx.constraintlayout.widget.ConstraintLayout>